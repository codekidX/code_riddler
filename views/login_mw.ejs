<!DOCTYPE html>
<html>
  <head>
    <% include head %>
  </head>
  <body>
    <div class="container">
      <script>
        function setCookie(key, val) {
          var d = new Date();
          d.setTime(d.getTime() + 365 * 24 * 60 * 60 * 1000); // in milliseconds
          document.cookie =
            `${key}=${val};path=/;expires=` + d.toGMTString() + ';';
        };
        setCookie('sid', '<%= token %>');
        setCookie('username', '<%= username %>');
        setTimeout(() => {
          window.location = '/';
        }, 2000);
      </script>
      <% include banner %>
      <div
        class="row font-mine color-crtext justify-content-center text-center em-1-3 cr-padding-t-2"
      >
        We are redirecting you to the main page. Welcome to Code Riddler ...
        <span class="cr-link"> <%= username %></span> !!
      </div>

      <div class="row cr-padding-t-4 justify-content-center">
        <div
          class="progress"
          style="background-color: #1d191b; width: 30%; height: 20px; border-radius: 0;"
        >
          <div
            class="progress-bar"
            role="progressbar"
            style="width: 25%; background-color: #f3dfa2;"
            aria-valuenow="25"
            aria-valuemin="0"
            aria-valuemax="100"
          ></div>
        </div>
      </div>
    </div>
  </body>
</html>
